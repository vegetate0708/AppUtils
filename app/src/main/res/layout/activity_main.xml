<?xml version="1.0" encoding="utf-8"?>
<android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_IPCDemo"
        android:text="IPCDemo"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%"/>
    <Button
        android:id="@+id/bt_SMSUtils"
        android:text="激活系统短信界面"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_IPCDemo"
        app:layout_heightPercent="10%"/>
    <Button
        android:id="@+id/bt_recycledemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="recycleDEMO"
        android:layout_below="@id/bt_SMSUtils"/>
    <Button
        android:id="@+id/bt_actionBarDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="actionBarDEMO"
        android:layout_below="@id/bt_recycledemo"/>
    <Button
        android:id="@+id/bt_LockDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LockDEMO"
        android:layout_below="@id/bt_actionBarDemo"/>
</android.percent.support.PercentRelativeLayout>
